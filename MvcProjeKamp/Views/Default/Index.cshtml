
@using EntityLayer.Concrete
@model List<Content>


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">

                        <div class="timeline">
                            <br/>
                            @foreach (var content in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-success">@(((DateTime) content.ContentDate).ToString("dd-MMM-yyyy")) - @content.Writer.WriterName @content.Writer.WriterSurName</span>
                                </div>

                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="#">@content.Heading.HeadingName </a> </h3>
                                        <div class="timeline-body">
                                            @content.ContentValue
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </section>

    </div>

</body>
</html>
