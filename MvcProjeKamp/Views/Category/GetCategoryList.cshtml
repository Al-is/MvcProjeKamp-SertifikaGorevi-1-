
@using EntityLayer.Concrete
@model List<EntityLayer.Concrete.Category>


@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Kategori</h1>
<hr />
<h2>Mvc Kamp Tablo Örneği</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            <td>@category.CategoryDescription</td>
            <td>@category.CategoryStatus</td>
            <td><button class="btn btn-success">Güncelle</button></td>
        </tr>
    }

</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br />
